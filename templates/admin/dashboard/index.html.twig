{% extends 'admin/base.html.twig' %}

{% block title ('Tableau de bord') %}

{% block body %}

<main class="container-fluid mt-5">
    <h1>Tableau de bord</h1>
    <div class="row">
        <div class="col">
            <div class="card bg-info text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-user fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <div class="cart-title">{{stats.users}} utilisateurs</div>
                        </div>
                    </div>
                </div>
            </div>        
        </div>    
        <div class="col">
            <div class="card bg-success text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <div class="cart-title">{{stats.ads}} annonces</div>
                        </div>
                    </div>
                </div>
            </div>        
        </div>    
        <div class="col">
            <div class="card bg-warning text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <div class="cart-title">{{stats.bookings}} r√©servations</div>
                        </div>
                    </div>
                </div>
            </div>        
        </div>    
        <div class="col">
            <div class="card bg-dark text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comments fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <div class="cart-title">{{stats.comments}} commentaires</div>
                        </div>
                    </div>
                </div>
            </div>        
        </div>
        <div class="row mt-5">
            <div class="col">
                <div class="alert alert-success my-2">
                    <h3 class="px-5"><i class="fas fa-arrow-up"></i><strong> Annonces les + populaires</strong></h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Loueur</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for ad in bestAds %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td>
                                    <img src="{{ad.avatar}}" alt="" class="avatar avatar-xs">
                                    {{ad.firstname}} {{ad.lastname}}
                                </td>
                                <td>
                                    <span class="badge badge-dark">
                                        {{ad.note|number_format(1,',','')}}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>        
            <div class="col">
                <div class="alert alert-warning my-2">
                    <h3 class="px-5"><i class="fas fa-arrow-down"></i><strong> Les pires annonces</strong></h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Loueur</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for ad in worstAds %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td>
                                    <img src="{{ad.avatar}}" alt="" class="avatar avatar-xs">
                                    {{ad.firstname}} {{ad.lastname}}
                                </td>
                                <td>
                                    <span class="badge badge-dark">
                                        {{ad.note|number_format(1,',','')}}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>              
        </div> 
    </div>   
</main>
{% endblock %}
