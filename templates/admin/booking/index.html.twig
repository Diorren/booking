{% extends 'admin/base.html.twig' %}

{% block title ('Gestion des réservations') %}

{% block body %}

<main class="container-fluid mt-5">
    <h1 class="mb-3">Gestion des réservations</h1>
    <table class="table table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{booking.id}}</td>
                <td>{{booking.createdAt|date('d/m/Y H:i')}}</td>
                <td>{{booking.booker.fullname}}</td>
                <td>{{booking.ad.title}}</td>
                <td>{{booking.startDate|date('d/m/Y')}}</td>
                <td>{{booking.endDate|date('d/m/Y')}}</td>
                <td>
                    <a href="{{ path('admin_bookings_edit',{'id':booking.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('admin_bookings_delete',{'id':booking.id}) }}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</main>
{% endblock %}
