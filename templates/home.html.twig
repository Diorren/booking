{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <main class="container">
        <div class="jumbotron">
            <h1 class="display-5">Booking</h1>
            <p class="lead">Bienvenue sur le site d'annonces pour s'évader</p>
            <hr class="my-4">
            <p>Vous pouvez choisir tout type de biens pour vos vacances qui seront bien méritées après cet épisode de Covid-19</p>
            <p class="lead">
                <a href="" class="btn btn-primary btn-lg">+ d'infos</a>
            </p>
        </div> 

        <h1>Annonces les mieux notées</h1> 
        <section class="row">

        {% for data in ads %}
        
        {% include 'ad/_ad.html.twig' with {'ad':data.announce} %}

        {% endfor %}
            
        </section>

        <h1>Nos meilleures annonceurs</h1> 
        <section class="row">

        {% for data in users %}
            <article class="col">
                <div class="card mb-3">
                    <h3 class="h4 card-header text-primary bg-warning">{{data.user.fullname}}</h3>
                    <div class="card-body">
                        <img src="{{data.user.avatar}}" alt="avatar de {{data.user.fullname}}" class="float-left mr-3">
                        <p>{{data.user.introduction}}</p>
                        <a href="{{path('user_show',{'slug':data.user.slug}) }}" class="btn btn-warning text-primary">+ d'infos</a>
                    </div>
                </div>
            </article>
        {% endfor %}

        </section>
    </main>
    {% endblock %}
    