{% extends 'base.html.twig' %}

{% block title(ad.title) %}
{% block body %}

<div class="ad-title" style="https://placeimg.com/640/480/nature">
    <div class="container">
        <h1>{{ad.title}}</h1>
        <p class="mt-5">{{ad.description}}</p>
        <p class="mt-4">{{ad.rooms}} chambres pour {{ad.price}} &euro; / nuit</p>
        <a href="#" class="btn btn-warning buttonRes">Réserver</a>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ad.content|raw}}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
    {% for image in ad.images %}
		<li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" class="{% if loop.first %}active{% endif %}"></li>
    {% endfor %}
	</ol>
	<div class="carousel-inner">
    {% for image in ad.images %}
		<div class="carousel-item {% if loop.first %}active{% endif %}">
			<img class="d-block w-100" src="{{image.url}}" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>{{ad.title}}</h5>
                <p>{{image.caption}}</p>
            </div>
		</div>
    {% endfor %}
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Précédent</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Suivant</span>
	</a>
</div>
        </div>
        <div class="col">
            <div class="row">
                <div class="col-4">
                    <img src="https://placeimg.com/64/64/tech" alt="">
                </div>
                <div class="col">
                    <h3>John Doe</h3>
                    <span class="badge badge-warning">3 annonces</span>
                </div>
            </div>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Error, enim!</p>
            <p>Reprehenderit, voluptas? Inventore assumenda reprehenderit id eveniet nemo non maxime.</p>
            <p>Illum alias similique deleniti perspiciatis doloremque, quam odit harum amet?</p>
        </div>
    </div>
</div>

{% endblock %}