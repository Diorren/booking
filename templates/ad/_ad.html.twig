{% set url = path('ads_single',{'slug':ad.slug}) %}
<article class="col-md-4">
	<div class="card mb-3">
		<h3 class="h4 card-header text-primary bg-warning">{{ad.rooms}}
			chambres
			{{ad.price}}
			&euro; /nuit</h3>
		<div class="card-body">
			<a href="{{ url }}">
				<img src="{{ad.coverImage}}" class="img-fluid" alt="{{ad.title}}" style="height:300px;width:100%;display:block;">
			</a>
			<h4 class="card-title">{{ad.title}}</h4>
			<p class="card-text">{{ad.description}}</p>
			<a href="{{ url }}" class="btn btn-warning text-primary">+ d'infos</a>
			{% if app.user == ad.author %}
        	<a href="{{ path('ads_edit',{'slug':ad.slug}) }}" class="btn btn-info">Modifier</a>
        	{% endif %}
		</div>
		<div class="card-footer text-muted">
		{% if ad.comments|length > 0 %}
			{% include 'partials/rating.html.twig' with {'rating': ad.averageRatings} %} sur {{ad.comments|length}} avis.
		{% else %}
			<span>Pas encore not√©</span>
		{% endif %}
		</div>
	</div>
</article>
